<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="MyEditTextStyle" parent="android:Widget.EditText">



        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff8d00</item>
        <item name="android:padding">10dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">32sp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:alpha">0.75</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">Enter name</item>
        <item name="android:singleLine">true</item>
    </style>



    <style name="MyEditTextStyle1" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:alpha">0.75</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">Enter Name</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#ff8d00</item>
        <item name="android:textColorHint">#ff8d00</item>
        <item name="android:textSize">24sp</item>
        <item name="android:singleLine">true</item>
</style>

    <style name="MyEditTextStyle2" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:alpha">0.75</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#ff8d00</item>
        <item name="android:textColorHint">#ff8d00</item>
        <item name="android:textSize">24sp</item>
        <item name="android:singleLine">true</item>


    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:src">@drawable/jumpman</item>

    </style>


    <style name="MyEditTextStyle3" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:alpha">0.75</item>
        <item name="android:gravity">center</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#ff8d00</item>
        <item name="android:textColorHint">#ff8d00</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">monospace</item>


    </style>
</resources>
