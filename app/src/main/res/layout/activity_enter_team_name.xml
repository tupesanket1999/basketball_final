<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterTeamName"
    android:background="#fff2df">


    //Linear Layout for Team A
    <LinearLayout
        android:id="@+id/team1_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:textStyle="bold"
            android:id="@+id/nameOfTeamA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team A"
            android:textColor="#ee6002"
            android:textSize="32sp" />
        <TextView
            android:id="@+id/team1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:layout_marginTop="20dp"
            android:textColor="#ff8d00"
            android:textSize="32sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#ff8d00"
            android:text=" 2 Pointer"
            android:textColor="#ffddb0"
            android:textSize="12sp"
            android:onClick="IncrementByTwo"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#ff8d00"
            android:text=" 3 Pointer"
            android:textColor="#ffddb0"
            android:textSize="12sp"
            android:onClick="IncrementByThree"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Free Throw"
            android:backgroundTint="#ff8d00"
            android:textColor="#ffddb0"
            android:textSize="12sp"
            android:onClick="IncrementByOne"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Foul "
            android:backgroundTint="#ff8d00"
            android:textColor="#ffddb0"
            android:textSize="12sp"
            android:onClick="Foul"/>
    </LinearLayout>



    //Linear Layout for Team B
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="0dp"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:textStyle="bold"
            android:id="@+id/nameOfTeamB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:textColor="#ee6002"
            android:textSize="32sp" />
        <TextView
            android:id="@+id/team2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:layout_marginTop="20dp"
            android:textColor="#ff8d00"
            android:textSize="32sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#ff8d00"
            android:text=" 2 Pointer"
            android:textColor="#ffddb0"
            android:textSize="12sp"
            android:onClick="IncrementByTwo1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#ff8d00"
            android:text=" 3 Pointer"
            android:textColor="#ffddb0"
            android:textSize="12sp"
            android:onClick="IncrementByThree1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ff8d00"
            android:layout_marginTop="10dp"
            android:text=" Free Throw"
            android:textColor="#ffddb0"
            android:textSize="12sp"
            android:onClick="IncrementByOne1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Foul "
            android:backgroundTint="#ff8d00"
            android:textColor="#ffddb0"
            android:textSize="12sp"
            android:onClick="Foul1"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/team1_id"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp">


        <TextView
            android:text="00:00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="#FFAB40"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"


            />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


        <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/button"
            android:backgroundTint="#ff8d00"
            android:textColor="#ffddb0"
            />

        <Button
            android:text="Pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_alignBaseline="@+id/button"
            android:layout_alignBottom="@+id/button"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#ff8d00"
            android:textColor="#ffddb0"/>

        <Button
            android:text="Reset"
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:backgroundTint="#ff8d00"
            android:textColor="#ffddb0"/>

        <Button
            android:text="Save Lap"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#ff8d00"
            android:textColor="#ffddb0"/>

        </LinearLayout>

        <ListView
            android:id="@+id/listview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/button4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="75dp"/>


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#ff8d00"
        android:text="Finish Match"
        android:textColor="#ffddb0"
        android:textSize="12sp"
        android:onClick="fisnish"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        />

</RelativeLayout>
